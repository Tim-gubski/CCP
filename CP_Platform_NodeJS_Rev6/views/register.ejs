<body>

  <section class="container">
    <h1 style='text-align:center;'> Registration form</h1>
    <div style="width:30%; margin:40px auto;">
      <form action="/register" method="POST">
        <div class="form-group">
          <input class='form-control' type="text" placeholder="username" name="username" class="username">
        </div>

        <div class="form-group">
          <input class='form-control' type="password" placeholder="password" name="password" class="password">
        </div>
        <div class="form-group">
          <input class='form-control' type="text" placeholder="Admin Code" name="adminCode" class="role">
        </div>
        <div class="form-group">
          <button class='btn btn-lg btn-primary btn-block submit'>Submit</button>
        </div>

        <div class="form-group">
          <p class="message"></p>
        </div>

      </form>
    </div>
  </section>

