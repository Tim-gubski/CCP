<body>
  <section class="container">
    <h1 style='text-align:center;'> Please, log into account</h1>
    <div style="width:30%; margin:40px auto;">
      <form action="/login" method="POST">
        <div class="form-group">
          <input class='form-control username' type="text" placeholder="username" name="username">
        </div>
        <div class="form-group">
          <input class='form-control password' type="password" placeholder="password" name="password">
        </div>
        <div class="form-group">
          <button class='btn btn-lg btn-primary btn-block submit'>Submit</button>
        </div>
        <div class="form-group">
          <p class="message"></p>
        </div>

      </form>
    </div>
  </section>

